extends layout

block main
  .game-container
    p Waiting game list
    div(data-game-waiting-count=0).game-waiting-list
      p Loading...

    button.js-new-game New game

  .user-container
    p Online user
    div(data-online-user-count=0).online-user-list
      p Loading...
    label Regist
      input(class="regist-username", name="username")
      button.js-regist-user Regist
    label Login
      input(class="login-username", name="login")
      button.js-login-user Login
